{
	"compilerOptions": {
		"module": "ESNext",
		"target": "ESNext",
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"outDir": "/dist",
		"noEmit": true
	},
	"ts-node": {
		"esm": true,
		"experimentalSpecifierResolution": "node"
	},
	"compileOnSave": true,
	"include": ["./src/**/*", "data"],
	"exclude": ["node_modules"]
}
